# Application config
PORT="4000"

# Database url, now connection with neon aws pooling
DATABASE_URL="url"

# Secret keys
SESSION_SECRET="session-secret"
CSRF_SECRET="csrf-secret"
JWT_SECRET="your-secret-key-here" # Use a strong random string in production

JWT_ACCESS_EXPIRES_IN="15m" # Access token expiration (e.g., 15m, 1h)
JWT_REFRESH_EXPIRES_IN="7d" # Refresh token expiration (e.g., 7d, 30d)

# Urls
CORS_ORIGIN="http://localhost:3000"

# Production required
SWAGGER_USERNAME="admin@wds.org"
SWAGGER_PASSWORD="admin123@"

# External services
## Mail service https://myaccount.google.com/apppasswords (note: enable 2fa to use this feature)
MAIL_USER=""
MAIL_PASS=""

## Storage service (Cloudflare R2)
# Cloudflare Account ID (found in Cloudflare dashboard)
R2_ACCOUNT_ID=""
# R2 Access Key ID (create in Cloudflare dashboard > R2 > Manage R2 API Tokens)
R2_ACCESS_KEY_ID=""
# R2 Secret Access Key (create with Access Key ID)
R2_SECRET_ACCESS_KEY=""
# R2 Bucket name
R2_BUCKET_NAME="wds-shoe-store"
# R2 Endpoint URL (format: https://<account-id>.r2.cloudflarestorage.com)
R2_ENDPOINT=""
# Public URL for bucket (custom domain or R2.dev subdomain)
R2_PUBLIC_URL="cdn.wss.xirothedev.site"
CDN_BASE_URL="https://cdn.wss.xirothedev.site"
