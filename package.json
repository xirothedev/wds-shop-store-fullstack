{
  "name": "wds-shop-store-fullstack",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "apps/api/**/*.{ts,tsx}": [
      "prettier --write",
      "bash -c 'cd apps/api && eslint --fix'"
    ],
    "apps/web/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "bash -c 'cd apps/web && eslint --fix'"
    ],
    "**/*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nestjs/cqrs": "^11.0.3",
    "react-use": "^17.6.0"
  }
}
